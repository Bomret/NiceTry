{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "**/*.csproj"
                    ],
                    "exclude": [
                        "**/bin/**",
                        "**/obj/**"
                    ],
                    "cwd": "../src"
                }
            ],
            "dest": "obj/api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.yml"
                ],
                "src": "obj/api",
                "dest": "api"
            },
            {
                "files": [
                    "articles/**/*.md",
                    "articles/toc.yml"
                ]
            },
            {
                "files": [
                    "*.md",
                    "toc.yml"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "globalMetadata": {
            "_appTitle": "NiceTry Documentation"
        },
        "dest": "_site",
        "template": [ "default" ]
    }
}